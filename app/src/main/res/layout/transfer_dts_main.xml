<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Datos_Activity">

    <EditText
        android:id="@+id/editCantidadD"
        android:layout_width="377dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:hint="Ingrese cantidad"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/SpinnerD1"
        android:layout_width="376dp"
        android:layout_height="58dp"
        android:layout_below="@id/editCantidadD"
        android:layout_marginTop="47dp" />

    <Spinner
        android:id="@+id/SpinnerD2"
        android:layout_width="377dp"
        android:layout_height="60dp"
        android:layout_below="@id/SpinnerD1"
        android:layout_marginTop="65dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SpinnerD2"
        android:layout_marginTop="96dp"
        android:text="Calcular" />

    <Button
        android:id="@+id/btnBackD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Volver" />
</RelativeLayout>